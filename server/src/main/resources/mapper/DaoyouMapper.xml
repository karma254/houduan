<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.dao.DaoyouMapper">

    <resultMap type="com.spring.entity.Daoyou" id="DaoyouMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="gender" column="gender"/>
        <result property="idCard" column="id_card"/>
        <result property="phone" column="phone"/>
        <result property="certificateNumber" column="certificate_number"/>
        <result property="level" column="level"/>
        <result property="experience" column="experience"/>
        <result property="status" column="status"/>
        <result property="introduction" column="introduction"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="queryById" resultMap="DaoyouMap">
        select id, name, age, gender, id_card, phone, certificate_number, level, experience, status, introduction, create_time, update_time
        from daoyou
        where id = #{id}
    </select>

    <select id="queryAllByLimit" resultMap="DaoyouMap">
        select id, name, age, gender, id_card, phone, certificate_number, level, experience, status, introduction, create_time, update_time
        from daoyou
        <where>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by create_time desc
        <if test="pageStart != null and pageSize != null">
            limit #{pageStart}, #{pageSize}
        </if>
    </select>

    <select id="count" resultType="long">
        select count(*) from daoyou
        <where>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
    </select>
</mapper>